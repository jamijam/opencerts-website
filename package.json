{
  "name": "opencerts-website",
  "version": "1.0.2",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "dev": "next",
    "lint": "eslint . --ext .js --max-warnings 0",
    "lint:fix": "eslint . --ext .js --fix",
    "build": "next build",
    "build:static": "next build && next export",
    "start": "next build && next start",
    "cname": "echo 'opencerts.io' > out/CNAME",
    "copy-static-files": "cp docs/exampleIssuers.json out/exampleIssuers.json",
    "deploy": "yarn deploy:prebuilt && gh-pages --dotfiles --dist out",
    "deploy:prebuilt": "rm -rf out && yarn build:static && touch out/.nojekyll && yarn cname && yarn copy-static-files"
  },
  "dependencies": {
    "@govtechsg/open-certificate": "^1.1.39",
    "@zeit/next-sass": "^1.0.1",
    "eslint-plugin-react": "^7.7.0",
    "ethereumjs-util": "^5.1.5",
    "lodash": "^4.17.11",
    "next": "^7.0.1",
    "next-redux-wrapper": "^2.0.0",
    "node-sass": "^4.9.3",
    "prop-types": "^15.6.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-dropzone": "^6.0.2",
    "react-redux": "^5.0.1",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-saga": "^0.16.0",
    "truffle-contract": "^3.0.4",
    "web3": "^1.0.0-beta.36",
    "//": "web3-provider-engine using my own fork until websocket fix is merged",
    "web3-provider-engine": "rjchow/provider-engine"
  },
  "license": "ISC",
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-chai-expect": "^1.1.1",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-prettier": "^3.0.0",
    "gh-pages": "^2.0.1",
    "jest": "^23.6.0",
    "prettier": "^1.14.3"
  }
}
